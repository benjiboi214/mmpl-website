{
  "name": "mmpl-do",
  "version": "0.1.0",
  "description": "MMPL Website, now in NODE!",
  "scripts": {
    "serve:build": "npm run build && npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:features",
    "test:unit": "cross-env NODE_PATH=. NODE_ENV=test mocha -r ts-node/register --config test/.mocharc.unit.json -R list",
    "test:features": "cross-env NODE_PATH=. NODE_ENV=test mocha -r ts-node/register --config test/.mocharc.features.json -R list",
    "lint": "eslint --no-error-on-unmatched-pattern {src,test,config}/**/*.{ts,js}",
    "lint:fix": "eslint --fix --no-error-on-unmatched-pattern {src,test,config}/**/*.{ts,js}",
    "coverage": "cross-env NODE_PATH=. NODE_ENV=test nyc mocha -r ts-node/register --config test/.mocharc.unit.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjiboi214/mmpl-do.git"
  },
  "author": "Ben Elliot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjiboi214/mmpl-do/issues"
  },
  "homepage": "https://github.com/benjiboi214/mmpl-do#readme",
  "dependencies": {
    "cross-env": "^7.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/dirty-chai": "^2.0.2",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.16.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}